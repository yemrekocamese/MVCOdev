@model Product

@{
    ViewBag.Title = "Details";
}


<script src="https://kit.fontawesome.com/38690bf345.js" crossorigin="anonymous"></script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<div class="product">
    <div class="row">
        <div class="col-md-6">
            <img src="/@Model.ImageUrl" class="img-fluid rounded" alt=""/>
        </div>
        <div class="col-md-6">
            <div class="row mt-1">
                <div class="col-md-12">
                    <h1 style="font-size:20px;font-weight:700;"> @Model.Name</h1>
                </div>
                <div class="row mt-1">
                    <div class="col-md-12">



                        <span class="product-number">#4568453</span>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col-md-12">
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star"></i>
                                <span class="badge badge-success">75</span>
                            </div>

                            <div class="col-md-4 mt-3">
                                <div id="write-review">
                                    <a href="#">
                                        Yorum Yap
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mt-2">
                            <div id="pricespan">
                                <h3 id="product-price">@Model.Price TL</h3>
                            </div>

                        </div>
                        <div id="buttonn">
                            <div class="col-md-12 mt-3">
@* 
                                @using (Html.BeginForm("AddToCart", "Cart"))
                                {
                                    @Html.HiddenFor(i=>i.Id)
                                    <button type="submit" class="btn btn-success">
                                        <i class="fa-solid fa-cart-plus"></i>
                                        Sepete Ekle

                                    </button>
                                } *@



                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-expanded="true">Ürün Detayları</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-expanded="true">Ödeme Şekilleri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-comment-tab" data-bs-toggle="pill" href="#pills-comment" role="tab" aria-controls="pills-comment" aria-expanded="true">Yorum Yap</a>
                    </li>

                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                        <p>@Model.Description</p>
                    </div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        <p>Kredi kartı ve ya havale ile ödeme yapabilirsiniz.</p>
                    </div>
                    <div class="tab-pane fade" id="pills-comment" role="tabpanel" aria-labelledby="pills-comment-tab">
                        <p>.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
